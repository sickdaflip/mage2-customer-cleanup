<?xml version="1.0"?>
<!--
/**
 * Customer Cleanup Grid UI Component
 */
-->
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">customercleanup_customer_listing.customercleanup_customer_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="add">
                <url path="adminhtml/system_config/edit/section/customercleanup"/>
                <class>primary</class>
                <label translate="true">Configure Cleanup Rules</label>
            </button>
        </buttons>
        <spinner>customercleanup_customer_columns</spinner>
        <deps>
            <dep>customercleanup_customer_listing.customercleanup_customer_listing_data_source</dep>
        </deps>
    </settings>

    <dataSource name="customercleanup_customer_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <updateUrl path="mui/index/render"/>
        </settings>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="customercleanup_customer_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext"/>
        <filters name="listing_filters"/>
        <massaction name="listing_massaction">
            <action name="notify">
                <settings>
                    <confirm>
                        <message translate="true">Send deletion warning emails to selected customers?</message>
                        <title translate="true">Send Warning Emails</title>
                    </confirm>
                    <url path="customercleanup/customer/massNotify"/>
                    <type>notify</type>
                    <label translate="true">Send Warning Email</label>
                </settings>
            </action>
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to delete selected customers? This action cannot be undone!</message>
                        <title translate="true">Delete Customers</title>
                    </confirm>
                    <url path="customercleanup/customer/massDelete"/>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
        </massaction>
        <paging name="listing_paging"/>
    </listingToolbar>

    <columns name="customercleanup_customer_columns">
        <selectionsColumn name="ids">
            <settings>
                <indexField>entity_id</indexField>
            </settings>
        </selectionsColumn>

        <column name="entity_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>

        <column name="firstname">
            <settings>
                <filter>text</filter>
                <label translate="true">First Name</label>
            </settings>
        </column>

        <column name="lastname">
            <settings>
                <filter>text</filter>
                <label translate="true">Last Name</label>
            </settings>
        </column>

        <column name="email">
            <settings>
                <filter>text</filter>
                <label translate="true">Email</label>
            </settings>
        </column>

        <column name="group_id">
            <settings>
                <filter>text</filter>
                <label translate="true">Group ID</label>
            </settings>
        </column>

        <column name="created_at">
            <settings>
                <filter>dateRange</filter>
                <label translate="true">Customer Since</label>
            </settings>
        </column>

        <column name="website_id">
            <settings>
                <filter>text</filter>
                <label translate="true">Website ID</label>
            </settings>
        </column>
    </columns>
</listing>
